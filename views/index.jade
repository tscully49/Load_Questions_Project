extends layout

block content
  .container#app-wrapper
    .row
      .col-xs-12#game-wrapper
        h3#host-banner You are the host
        #header-wrapper
          h1
            u= title
        //p Welcome to #{title}
        #timer-buttons.group
          #buttons-wrapper
            h3 Master Controls
            button#start-round.btn.btn-success Click to start round
            button#resume-timer.btn.btn-success.hidden Resume Timer
            button#pause-timer.btn.btn-warning.hidden Pause Timer
            button#reset-timer.btn.btn-info.hidden Reset Timer?
          #end-round-wrapper
            button#end-round.btn.btn-danger.hidden End Round
        #timer-wrapper
          #timer
        #question-box-wrapper
          #question-box-header 
            u Current Question:
          #question-box
        form#answer-to-question-wrapper
          .form-group
            input#answer-box.form-control(type='text', name='sessionID', placeholder='answer' autocomplete='off')
            button#submit-answer.btn.btn-primary Submit Answer
        #show-answer.hidden
          h3 Your Answer: 
          h4#answer
        #all-answers-for-voting.hidden
          #answers-header 
            h3 Vote on who gave each answer!!!
        #server-disconnect
